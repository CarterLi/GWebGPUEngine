{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "allowBranch": [
        "master",
        "next"
      ],
      "message": "chore: publish"
    }
  },
  "version": "0.1.0-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "publishConfig": {
    "access": "public"
  }
}
